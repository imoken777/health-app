datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id
  userId    String
  label     String
  done      Boolean
  createdAt DateTime
}

model UserProfile {
  id           String @id
  userId       String @unique
  height       Int
  weight       Int
  age          Int
  targetWeight Int
  gender       String
}
